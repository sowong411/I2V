<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.Light"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/eventnameContainer"
        android:orientation="vertical"
        android:layout_marginLeft="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/event_name"
            android:text="Create Event"
            android:textSize = "30sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/name"
            android:hint="Enter an event name"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
    android:id="@+id/memContainer"
    android:layout_below="@+id/eventnameContainer"
    android:orientation="horizontal"
    android:layout_marginLeft="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="17dp"
    android:layout_marginTop="3dp"
    android:layout_marginRight="5dp">

    <ImageButton
        android:id="@+id/addmem_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/memadd"
        android:background="#00000000"
        />
    <TextView
        android:id="@+id/memlist"
        android:text="Add Members"
        android:textSize = "25sp"
        android:clickable="true"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/more"
        android:text="More information"
        android:clickable="true"
        android:layout_marginBottom="17dp"
        android:layout_below="@+id/memContainer"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/dateContainer"
        android:layout_below="@+id/more"
        android:orientation="horizontal"
        android:layout_marginLeft="7dp"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="5dp">

        <ImageButton
            android:id="@+id/date_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@drawable/date" />
            <TextView
            android:id="@+id/date"
            android:layout_marginLeft="10dp"
            android:text="Date"
            android:textSize = "25sp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/timeContainer"
        android:layout_below="@+id/dateContainer"
        android:orientation="horizontal"
        android:layout_marginLeft="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="5dp">

        <ImageButton
            android:id="@+id/time_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@drawable/time" />
        <TextView
            android:id="@+id/time"
            android:layout_marginLeft="10dp"
            android:text="Time"
            android:textSize = "25sp"
            android:clickable="true"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/locationContainer"
        android:layout_below="@+id/timeContainer"
        android:orientation="horizontal"
        android:layout_marginLeft="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="5dp">

        <ImageButton
            android:id="@+id/location_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@drawable/location" />
        <TextView
            android:id="@+id/location"
            android:text="Location"
            android:layout_marginLeft="10dp"
            android:textSize = "25sp"
            android:clickable="true"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/create_event_button"
        style="?android:textAppearanceSmall"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:autoLink="web"
        android:src="@drawable/tick"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />
</RelativeLayout>
